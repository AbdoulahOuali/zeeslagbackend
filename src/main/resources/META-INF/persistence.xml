<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="zeeSlagPersistenceUnit">
        <class>nl.hva.projectewa.teamc.model.Schip</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="zeeSlagCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="zeeSlagDrop.ddl"/>
        </properties>
    </persistence-unit>
</persistence>
